<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta http-equiv="X-UA-Compatible" content="IE=edge" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/png" sizes="32x32" href="/imgs/cover.png" />
		<link rel="preconnect" href="https://fonts.gstatic.com" />
		<link
			href="https://fonts.googleapis.com/css2?family=Patrick+Hand&family=Roboto:wght@300;400&display=swap"
			rel="stylesheet"
		/>
		<link rel="stylesheet" href="\css\login.css" />
		<title>BFF Finder</title>
	</head>
	<body>
		<div id="mainContainer">
			<!-- !header -->
			<header>
				<div class="mainTitle">
					<h1 class="mainTitle">
						<a href="/feed"
							><img id="logo" src="imgs/mainCover.png" alt="DogFind"
						/></a>
					</h1>
				</div>
			</header>
			<!-- !main -->
			<main>
				<div class="row justify-content-center">
					<section class="formContainer">
						<% if (locals.messages.errors) { %>
						<%messages.errors.forEach(el=>{%>
						<div class="alert alert-danger"><%= el.msg %></div>
						<% }) %> <% } %> <% if (locals.messages.info) { %> <%
						messages.info.forEach(el=>{%>
						<div class="alert alert-info"><%= el.msg %></div>
						<% }) %> <% } %>
						<form action="/login" method="POST">
							<div class="email">
								<label for="exampleInputEmail1" class="form-label"
									>Email address</label
								>
								<input
									type="email"
									class="form-control"
									id="exampleInputEmail1"
									aria-describedby="emailHelp"
									name="email"
								/>
							</div>
							<div class="pass">
								<label for="exampleInputPassword1" class="form-label"
									>Password</label
								>
								<input
									type="password"
									class="form-control"
									id="exampleInputPassword1"
									name="password"
								/>
							</div>
							<div class="btnContainer">
								<button type="submit" class="btn funcBtns btn-primary">
									Submit
								</button>
							</div>
						</form>
					</section>
				</div>
			</main>
			<!-- !footer -->
			<footer>
				<span>
					<a id="portfolio" href="https://marcoscardoso.netlify.app"
						>Marcos Cardoso</a
					>
					&copy; 2021</span
				>
			</footer>
		</div>
	</body>
</html>
